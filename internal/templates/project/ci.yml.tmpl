name: CI

on:
  push:
    branches: [main]
{{- if .TagPrefix}}
    tags: ['{{.TagPrefix}}v*']
{{- else}}
    tags: ['v*']
{{- end}}
  pull_request:
    branches: [main]

{{- if .EnablePages}}

# Permissions for GitHub Pages deployment
permissions:
  contents: write
  pages: write
  id-token: write

# Prevent concurrent Pages deployments
concurrency:
  group: pages-${{"{{"}} github.ref {{"}}"}}
  cancel-in-progress: false
{{- end}}

jobs:
  ci:
{{- if not .SingleOS}}
    strategy:
      fail-fast: false
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
    runs-on: ${{"{{"}} matrix.os {{"}}"}}
    name: CI (${{"{{"}} matrix.os {{"}}"}})
{{- else}}
    runs-on: ubuntu-latest
{{- end}}
    steps:
      - uses: actions/checkout@v4

{{- if eq .Language "go"}}
      - uses: actions/setup-go@v5
        with:
          go-version: 'stable'
{{- else if eq .Language "rust"}}
      - uses: dtolnay/rust-toolchain@stable
{{- else if eq .Language "bun"}}
      - uses: oven-sh/setup-bun@v2
{{- end}}

{{- if .IsXplatSelf}}
      - name: Bootstrap {{.BinaryName}}
        run: go build -o {{.BinaryName}} .

      - name: Build
        run: ./{{.BinaryName}} task {{.TaskBuild}}

      - name: Test
        run: ./{{.BinaryName}} task {{.TaskTest}}

      - name: Lint
        run: ./{{.BinaryName}} task {{.TaskLint}}
        continue-on-error: true

      # Release builds only on tags
      - name: Determine version
        if: startsWith(github.ref, 'refs/tags/{{.TagPrefix}}v')
        id: version
        run: echo "version=${GITHUB_REF_NAME#{{.TagPrefix}}}" >> $GITHUB_OUTPUT

      - name: Build release binaries
        if: startsWith(github.ref, 'refs/tags/{{.TagPrefix}}v')
        env:
          VERSION: ${{"{{"}} steps.version.outputs.version {{"}}"}}
        run: ./{{.BinaryName}} release build {{.BinaryName}}

      - name: Upload release artifacts
        if: startsWith(github.ref, 'refs/tags/{{.TagPrefix}}v')
        uses: actions/upload-artifact@v4
        with:
          name: {{.BinaryName}}-binaries
          path: .releases/
{{- else if .IsExternalRepo}}
      - uses: {{.XplatRepo}}/.github/actions/setup@main
        with:
          token: ${{"{{"}} secrets.GITHUB_TOKEN {{"}}"}}

      - name: Setup (clone and build)
        run: xplat task setup

      - name: Test
        run: xplat task test
        continue-on-error: true

      # Release builds only on tags
      - name: Build release binaries
        if: startsWith(github.ref, 'refs/tags/v')
        run: xplat task release:build

      - name: Upload release artifacts
        if: startsWith(github.ref, 'refs/tags/v')
        uses: actions/upload-artifact@v4
        with:
          name: binaries-${{"{{"}} matrix.os {{"}}"}}
          path: ${{"{{"}} github.workspace {{"}}"}}/.releases/
          include-hidden-files: true
{{- else}}
      - uses: {{.XplatRepo}}/.github/actions/setup@main
        with:
          token: ${{"{{"}} secrets.GITHUB_TOKEN {{"}}"}}

      - name: Build
        run: xplat task build

      - name: Test
        run: xplat task test

      - name: Lint
        run: xplat task lint
        continue-on-error: true

      # Release builds only on tags
      - name: Build release binaries
        if: startsWith(github.ref, 'refs/tags/v')
        run: xplat task release:build

      - name: Upload release artifacts
        if: startsWith(github.ref, 'refs/tags/v')
        uses: actions/upload-artifact@v4
        with:
          name: binaries-${{"{{"}} matrix.os {{"}}"}}
          path: ${{"{{"}} github.workspace {{"}}"}}/.releases/
          include-hidden-files: true
{{- end}}

  release:
{{- if .TagPrefix}}
    if: startsWith(github.ref, 'refs/tags/{{.TagPrefix}}v')
{{- else}}
    if: startsWith(github.ref, 'refs/tags/v')
{{- end}}
    needs: ci
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v4

      - name: Download artifacts
        uses: actions/download-artifact@v4
        with:
{{- if .IsXplatSelf}}
          name: {{.BinaryName}}-binaries
{{- else}}
          merge-multiple: true
{{- end}}
          path: release

      - name: Generate checksums
        working-directory: release
{{- if .IsXplatSelf}}
        run: sha256sum {{.BinaryName}}-* > checksums.txt
{{- else}}
        run: sha256sum * > checksums.txt 2>/dev/null || true
{{- end}}

      - name: Create GitHub Release
        env:
          GH_TOKEN: ${{"{{"}} github.token {{"}}"}}
        run: |
{{- if .TagPrefix}}
          VERSION="${GITHUB_REF_NAME#{{.TagPrefix}}}"
          gh release create "$GITHUB_REF_NAME" \
            --title "{{.BinaryName}} ${VERSION}" \
{{- else}}
          gh release create "$GITHUB_REF_NAME" \
            --title "${GITHUB_REF_NAME}" \
{{- end}}
            --generate-release-notes \
            release/*
{{- if .EnablePages}}

  # GitHub Pages deployment (only on main branch push, not PRs or tags)
  pages-build:
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    needs: ci
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-go@v5
        with:
          go-version: 'stable'

      - uses: {{.XplatRepo}}/.github/actions/setup@main
        with:
          version: dev  # docs command requires latest source

      - name: Build docs
        run: xplat docs build

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./_site

  pages-deploy:
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    needs: pages-build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{"{{"}} steps.deployment.outputs.page_url {{"}}"}}
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
{{- end}}
